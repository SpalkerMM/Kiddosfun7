<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/number_zero"
    android:layout_height="match_parent"
    tools:context="Number0Activity2">
  <LinearLayout
      android:layout_width="395dp"
      android:layout_height="62dp"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.024">

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="back"
        android:layout_marginRight="80dp"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/bt_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/bt_home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:onClick="home1"
        android:layout_weight="1"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/bt_home1"
        tools:ignore="SpeakableTextPresentCheck" />

  </LinearLayout>

  <ImageButton
      android:id="@+id/bt_soundno0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="voiceover"
      android:backgroundTint="#00FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.952"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.537"
      app:srcCompat="@drawable/bt_voice"
      tools:ignore="SpeakableTextPresentCheck" />
  </androidx.constraintlayout.widget.ConstraintLayout>